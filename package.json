{
  "name": "prompt-house-premium-unified",
  "version": "1.0.0",
  "description": "Unified Prompt House Premium with Backend, Python Frontend and MCP Server",
  "private": true,
  "main": "backend/src/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:mcp\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:mcp": "cd mcp-server && npm run dev",
    "dev:python": "cd unified-python && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "build": "npm run build:backend && npm run build:mcp",
    "build:backend": "cd backend && npm run generate",
    "build:mcp": "cd mcp-server && npm run build",
    "start": "cd backend && npm start",
    "start:mcp": "cd mcp-server && npm start",
    "start:python": "cd unified-python && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "install:all": "npm install && cd backend && npm install && cd ../mcp-server && npm install",
    "install:python": "cd unified-python && pip install -r requirements.txt",
    "test": "cd backend && npm test"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "devDependencies": {},
  "workspaces": [
    "backend",
    "mcp-server"
  ],
  "keywords": ["express", "python", "fastapi", "mcp", "prompts", "ai", "model-context-protocol", "unified"],
  "author": "Your Name",
  "license": "MIT"
}
